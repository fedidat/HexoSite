<footer id="footer">
  <div class="footer-left">
    <% if (theme.startYear) { %>
      <%= __('footer.copyright') %> &copy; <%= theme.startYear %> - <%= new Date().getFullYear() %> <%= config.author || config.title %>
    <% } else { %>     
      <%= __('footer.copyright') %> &copy; <%= new Date().getFullYear() %> <%= config.author || config.title %>   
    <% } %>
  </div>
  <div class="footer-right">
    <nav>
      <ul>
        <% for (var i in theme.nav) { %> 
          <li><a href="<%- url_for(theme.nav[i]) %>"><%= __('nav.'+i).replace("nav.", "") %></a></li>
        <% } %>
        <% if (theme.search) { %>
        <li><a href="/search"><i class="fa fa-search"></i></a></li>
        <% } %>
        <% if (theme.rss) { %>
        <li><a href="/atom.xml"><i class="fa fa-rss"></i></a></li>
        <% } %>
      </ul>
    </nav>
  </div>
</footer>
